---
const intro =
  "Accessibility isn’t a final checklist, it’s the foundation of how I build. My approach focuses on long-term usability, compliance, and scale.";

const pillars = [
  {
    title: "Accessibility as a foundation",
    body:
      "I design and develop with accessibility in mind from the very first decision, ensuring inclusive experiences are the foundation of every project.",
    points: [
      "Semantic HTML and clear information structure",
      "Keyboard first interaction patterns",
      "Readable typography and color contrast safe choices",
      "Accessible forms, errors, and focus management",
    ],
  },
  {
    title: "Built for scale and reliability",
    body:
      "I specialize in supporting and modernizing platforms used by real users at scale, collaborating with cross-functional teams to keep systems reliable and compliant.",
    points: [
      "Alignment with WCAG, ADA, and Section 508 standards",
      "Maintaining and improving existing systems",
      "Clear documentation and shared patterns",
      "Collaboration with stakeholders and technical teams",
    ],
  },
  {
    title: "Looking ahead with AI and automation",
    body:
      "I’m exploring how AI and automation can support accessibility testing and data analysis in helping teams catch issues earlier and make smarter decisions faster.",
    points: [
      "Automated scans as early signals (paired with manual verification)",
      "Analytics-driven usability improvements",
      "Reducing manual overhead while improving coverage",
    ],
  },
];

const makeId = (text) =>
  `pillar-${text.toLowerCase().replace(/[^a-z0-9]+/g, "-").replace(/(^-|-$)/g, "")}`;
---

<section
  id="accessibility-approach"
  class="container section"
  aria-labelledby="accessibility-title"
>
  <!-- Keep section-head for consistency, but add a stack modifier -->
  <div class="section-head section-head-stack">
    <h2 id="accessibility-title">Accessibility Approach</h2>
    <p class="section-intro">{intro}</p>
  </div>

  <div class="grid three">
    {pillars.map((pillar) => {
      const pillarId = makeId(pillar.title);

      return (
        <article class="card" aria-labelledby={pillarId}>
          <h3 id={pillarId} class="card-title">{pillar.title}</h3>
          <p>{pillar.body}</p>
          <ul class="list" aria-label={`${pillar.title} key points`}>
            {pillar.points.map((p) => <li>{p}</li>)}
          </ul>
        </article>
      );
    })}
  </div>
</section>